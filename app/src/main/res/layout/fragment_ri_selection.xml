<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#042718"
    android:orientation="vertical"
    tools:context=".RI_selection">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        android:orientation="vertical">


        <Spinner
            android:id="@+id/spinner_days"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:padding="2dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="#EBF3C8 "
            android:focusable="true"
            android:textColor="@color/text_color">

            <TextView
                android:id="@+id/txt_workplan"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/scheduled"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

            <View
                android:id="@+id/view1"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/txt_workplan"
                android:layout_toRightOf="@+id/txt_workplan"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/txt_dueList"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_toEndOf="@+id/txt_workplan"
                android:layout_toRightOf="@+id/txt_workplan"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/general_dueList"
                android:textColor="@color/text_color"
                android:textStyle="bold" />

        </RelativeLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</LinearLayout>
