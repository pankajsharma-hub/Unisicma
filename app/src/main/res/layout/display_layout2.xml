<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_face_black_24dp"

            />

        <TextView
            android:id="@+id/child_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:textSize="18dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="first" />



        <TextView
            android:id="@+id/facility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_name"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="second" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1sp"
            android:layout_margin="5dp"
            android:layout_below="@id/facility"
            android:id="@+id/line"
            android:background="@color/cardview_shadow_start_color"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"/>



        <TextView
            android:id="@+id/child_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="third" />

        <TextView
            android:id="@+id/mother_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_Id"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="third" />

        <TextView
            android:id="@+id/duedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_name"
            android:layout_toEndOf="@+id/facility"
            android:layout_toRightOf="@+id/facility"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="Last Visit Date:"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/LastVisitDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/child_Id"
            android:layout_toRightOf="@+id/child_Id"

            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text=""
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp" />

    </RelativeLayout>
</LinearLayout>

